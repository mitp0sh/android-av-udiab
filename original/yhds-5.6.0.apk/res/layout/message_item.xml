<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/common_list_item_bkg" android:layout_width="fill_parent" android:layout_height="@dimen/common_list_item_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/MessageDetailItem_icon" android:src="@drawable/ic_message" android:scaleType="fitCenter" android:layout_centerVertical="true" style="@style/MyWidget.ModuleListItemIcon" />
    <LinearLayout android:id="@id/MessageItem_checkImageView_container" android:layout_alignParentRight="true" style="@style/MyWidget.ListActionPanel">
        <include layout="@layout/list_item_checkbox" />
    </LinearLayout>
    <TextView android:id="@id/MessageItem_textView" android:layout_toLeftOf="@id/MessageItem_checkImageView_container" android:layout_toRightOf="@id/MessageDetailItem_icon" android:layout_alignParentTop="true" style="@style/MyWidget.ListViewItemTextTop" />
    <TextView android:id="@id/MessageItem_bodyView" android:layout_toLeftOf="@id/MessageItem_checkImageView_container" android:layout_toRightOf="@id/MessageDetailItem_icon" android:layout_below="@id/MessageItem_textView" android:layout_alignParentBottom="true" style="@style/MyWidget.ListViewItemTextBottom" />
</RelativeLayout>